{% extends 'PesFrontBundle::layout.html.twig' %}

{% block section %}
    <div class="panel panel-default">
    <div class="panel-heading">Ajout d'un tournoi</div>
    <div class="panel-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">{{ form_label(form.nom) }}{{ form_widget(form.nom) }}</div>
        <div class="form-group">{{ form_label(form.site) }}{{  form_widget(form.site)  }}</div>

        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-floppy-save"></span> Enregistrer
        </button>
        {{ form_end(form) }}

</div>
</div>
{% endblock %}

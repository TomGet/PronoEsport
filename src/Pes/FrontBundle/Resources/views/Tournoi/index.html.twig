{% extends 'PesFrontBundle::layout.html.twig' %}

{% block section %}
    <div class="panel panel-default">
    <div class="panel-heading">Liste des tournois</div>
        <div class="panel-body">
            <a class="btn btn-primary" href="{{ path('pes_tournoi_new') }}">
                <span class="glyphicon glyphicon-plus"></span> Ajouter un tournoi
            </a>
        </div>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Site</th>
            <th>Actions</th>
        </tr>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pes_tournoi_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.site }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pes_tournoi_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pes_tournoi_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
    {% endblock %}
